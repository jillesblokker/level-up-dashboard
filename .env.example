# Environment variables example file
# Copy this file to .env and update with your own values

# Authentication configuration
NEXTAUTH_URL=http://localhost:3000  # Update with your deployment URL in production
NEXTAUTH_SECRET=YOUR_RANDOM_SECRET  # Generate using: openssl rand -base64 32
NEXTAUTH_DEBUG=true                 # Set to false in production

# Server port configuration
PORT=3000

# GitHub OAuth
# Create a new OAuth app at https://github.com/settings/developers
# Set the callback URL to: http://localhost:3000/api/auth/callback/github
GITHUB_ID=YOUR_GITHUB_CLIENT_ID
GITHUB_SECRET=YOUR_GITHUB_CLIENT_SECRET

# Database configuration (PostgreSQL via Supabase)
# Replace with your own database connection strings
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres:password@localhost:5432/postgres

# Admin credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=StrongPassword123! 